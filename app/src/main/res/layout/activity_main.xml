<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue"
            app:navigationIcon="@drawable/ic_menu"
            app:title="Интернет-магазин"
            app:titleTextColor="@color/white" />

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/food_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/food_photo1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/eda1" />

                        <TextView
                            android:id="@+id/food_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/food_photo1"
                            android:text="DELILABS / Суп куриный 300г 2 шт"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/food_description1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/food_name1"
                            android:layout_toRightOf="@+id/food_photo1"
                            android:text="Готовый обед в реторт-пакете. Лёгкий куриный, сытный и питательный, но не слишком калорийный супчик, который дарит заряд энергии."
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/food_photo2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/eda2" />

                        <TextView
                            android:id="@+id/food_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/food_photo2"
                            android:text="DELILABS / Плов с говядиной 300г DeliLabs 2 шт"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/food_description2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/food_name2"
                            android:layout_toRightOf="@+id/food_photo2"
                            android:text="Готовый обед в реторт-пакете. Традиционные специи, вкус и аромат - для истинных ценителей плова!"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/food_photo3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/eda3" />

                        <TextView
                            android:id="@+id/food_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/food_photo3"
                            android:text="Kronis / Щи из квашенной капусты 440г/450 мл"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/food_description3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/food_name3"
                            android:layout_toRightOf="@+id/food_photo3"
                            android:text="Замечательные , готовые первые блюда. Суп обладает отличным ароматом, содержит железо, калиевые соли и витамин С."
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/drink_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/drink_card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/drink_photo1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/napitok1" />

                        <TextView
                            android:id="@+id/drink_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/drink_photo1"
                            android:text="Granini / Нектар Манго 2 л. Granini / Гранини, 2 шт. по 1,0 л."
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/drink_description1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drink_name1"
                            android:layout_toRightOf="@+id/drink_photo1"
                            android:text="Состав: пюре из манго (23%), сок маракуйи на основе концентрата (7%), сахар, концентрированный лимонный сок, антиоксидант: аскорбиновая кислота; вода."
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/drink_card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drink_card1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/drink_photo2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/napitok2" />

                        <TextView
                            android:id="@+id/drink_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/drink_photo2"
                            android:text="САВА / Черничный нектар 'Дикая ягода', 0,2л, 2 упаковки"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/drink_description2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drink_name2"
                            android:layout_toRightOf="@+id/drink_photo2"
                            android:text="Нектары Дикая ягода - натуральный продукт, изготовленный путем прямого отжима сока из дикорастущих ягод Сибири."
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/drink_card3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/drink_card2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/drink_photo3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/napitok3" />

                        <TextView
                            android:id="@+id/drink_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/drink_photo3"
                            android:text="Сергиев Канон / Морс Монастырский Клюквенный 0,75 л (6 штук)"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/drink_description3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/drink_name3"
                            android:layout_toRightOf="@+id/drink_photo3"
                            android:text="Старинный русский прохладительный напиток, приготовление которого впервые подробно описано в книге Домостроя. Морс особым образом варится из ягод вологодской брусники."
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/desert_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/desert_card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/desert_photo1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/desert1" />

                        <TextView
                            android:id="@+id/desert_name1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/desert_photo1"
                            android:text="ОРИОН Group / Мучное кондитерское изделие ORION Choco Pie (ОРИОН Чоко Пай) 360 гр. (12 штук по 30 гр.)"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/desert_description1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/desert_name1"
                            android:layout_toRightOf="@+id/desert_photo1"
                            android:text="Orion Choco Pie Original - нежнейшее сочетание бисквита, шоколадной глазури и мягкой начинки суфле, созданное в 1974 году, не оставляет равнодушным уже многие поколения сладкоежек."
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/desert_card2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/desert_card1"
                    app:layout_constraintStart_toStartOf="@id/desert_card1"
                    app:layout_constraintTop_toBottomOf="@id/desert_card1"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/desert_photo2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/desert2" />

                        <TextView
                            android:id="@+id/desert_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/desert_photo2"
                            android:text="ЧЕРЁМУШКИ / Торт Прага 720 гр."
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/desert_description2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/desert_name2"
                            android:layout_toRightOf="@+id/desert_photo2"
                            android:text="Знаменитый торт, завоевавший любовь многих поколений. Классика советского времени - насыщенный шоколадный вкус с тонким ароматом абрикосового джема."
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/desert_card3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="@id/desert_card2"
                    app:layout_constraintStart_toStartOf="@id/desert_card2"
                    app:layout_constraintTop_toBottomOf="@id/desert_card2"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/desert_photo3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="16dp"
                            app:srcCompat="@drawable/desert3" />

                        <TextView
                            android:id="@+id/desert_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/desert_photo3"
                            android:text="НЕВА / Зефир с ароматом Ванили глазированный 900 гр."
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/desert_description3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/desert_name3"
                            android:layout_toRightOf="@+id/desert_photo3"
                            android:text="Легкий и воздушный зефир с ароматом ванили, покрытый тонким слоем глазури. Большой формат упаковки идеально подойдет для семьи или дружной компании!"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/ic_add" />

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>